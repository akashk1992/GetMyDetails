<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rltaskmgr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".TaskManager" >

    <Button
        android:id="@+id/cachesizebtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#28314d"
        android:text="Get Cache Size"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/clearcachebtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cachesizebtn"
        android:layout_marginTop="10dp"
        android:background="#28314d"
        android:text="Clear Cache"
        android:textSize="15sp"
        android:textColor="#ffffff" />
    

        <Button
            android:id="@+id/getappsbtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cachesizebtn"
            android:layout_marginLeft="10dp"
            android:background="#28314d"
            android:text="Get Running Apps"
            android:textSize="15sp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/killbtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/clearcachebtn"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getappsbtn"
            android:layout_marginTop="10dp"
            android:background="#28314d"
            android:text="Kill Background Task"
            android:textSize="15sp"
            android:textColor="#ffffff" />

            <ListView
                android:id="@+id/listViewapps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/killbtn">
            </ListView>
    
</RelativeLayout>